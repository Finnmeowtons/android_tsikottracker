<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/item_border"
    android:layout_height="107dp">

    <TextView
        android:id="@+id/tvRegistrationPlateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:text="Registration Plate"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRegistrationPlateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="RQS 808"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRegistrationPlateTitle"
        app:layout_constraintStart_toEndOf="@id/tvRegistrationPlateTitle"
        app:layout_constraintTop_toTopOf="@+id/tvRegistrationPlateTitle" />


    <TextView
        android:id="@+id/tvCustomerEmployeeNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:text="Customer Name"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRegistrationPlateTitle" />

    <TextView
        android:id="@+id/tvCustomerEmployeeNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Christian Jose Madriaga Soriano"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCustomerEmployeeNameTitle"
        app:layout_constraintStart_toStartOf="@+id/tvRegistrationPlateValue"
        app:layout_constraintTop_toTopOf="@+id/tvCustomerEmployeeNameTitle" />

    <TextView
        android:id="@+id/tvOfferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Service/Product"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomerEmployeeNameTitle" />

    
    <TextView
        android:id="@+id/tvOfferValue"
        android:layout_width="0dp"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:text="Body wash, Car wash, Wax, Detailing"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvOfferTitle"
        app:layout_constraintEnd_toStartOf="@+id/tvPriceTitle"
        app:layout_constraintStart_toStartOf="@+id/tvRegistrationPlateValue"
        app:layout_constraintTop_toTopOf="@+id/tvOfferTitle" />

    <TextView
        android:id="@+id/tvTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Time"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTimeValue"
        app:layout_constraintEnd_toStartOf="@+id/tvTimeValue"
        app:layout_constraintTop_toTopOf="@+id/tvTimeValue" />

    <TextView
        android:id="@+id/tvTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="12:50 AM"
        app:layout_constraintBottom_toBottomOf="@+id/tvRegistrationPlateTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvRegistrationPlateTitle" />

    <TextView
        android:id="@+id/tvPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="66,000 â‚±"
        app:layout_constraintBottom_toBottomOf="@+id/tvOfferTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvOfferTitle" />

    <TextView
        android:id="@+id/tvPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textColor="@color/black"
        android:text="Total Price"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvPriceValue"
        app:layout_constraintEnd_toStartOf="@+id/tvPriceValue"
        app:layout_constraintTop_toTopOf="@+id/tvPriceValue" />
</androidx.constraintlayout.widget.ConstraintLayout>